<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/columns"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <fragment android:name="com.suchagit.android2cloud.fragments.DeviceListFragment"
        android:id="@+id/device_list"
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="fill_parent" />
    <LinearLayout
        android:id="@+id/send_pane"
        android:layout_weight="3"
        android:layout_width="0px"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/send_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/url_input_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:padding="20dp"
                android:text="@string/url_input_label"
                android:layout_centerHorizontal="true" />
	        <EditText
	            android:id="@+id/url_input"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:padding="20dp"
	            android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/url_input_label" />
	        <Button
	            android:id="@+id/url_input_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/url_input"
                android:textSize="30sp"
                android:padding="20dp"
                android:minWidth="175dp"
                android:minHeight="100dp"
                android:layout_marginTop="40dp"
	            android:layout_centerHorizontal="true"
	            android:text="@string/url_input_button" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>